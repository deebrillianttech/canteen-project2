<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>controllers.loginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoryController</servlet-name>
        <servlet-class>controllers.categoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>foodController</servlet-name>
        <servlet-class>controllers.foodController</servlet-class>
        <init-param>
            <param-name>imageUploadPath</param-name>
            <param-value>C:\Users\ataulislam.raihan\Documents\NetBeansProjects\canteen\web\food-items\</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>menuController</servlet-name>
        <servlet-class>controllers.menuController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>scheduleController</servlet-name>
        <servlet-class>controllers.scheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>scheduleWebService</servlet-name>
        <servlet-class>controllers.scheduleWebService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userController</servlet-name>
        <servlet-class>controllers.userController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>restController</servlet-name>
        <servlet-class>controllers.restController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>orderController</servlet-name>
        <servlet-class>controllers.orderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reportsController</servlet-name>
        <servlet-class>controllers.reportsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryController</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>foodController</servlet-name>
        <url-pattern>/food</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menuController</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>scheduleController</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>scheduleWebService</servlet-name>
        <url-pattern>/ws_schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>restController</servlet-name>
        <url-pattern>/rest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>orderController</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reportsController</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer</description>
            <url-pattern>/WEB-INF/views/*</url-pattern>
            <url-pattern>/index.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
</web-app>
